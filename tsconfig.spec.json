{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": ["jest", "node"],
    "module": "CommonJS",
    "moduleResolution": "node16",
    "target": "ES2022",
    "skipLibCheck": true,
    "allowJs": true,
    "paths": {
      "@angular/core/testing": ["node_modules/@angular/core/types/testing.d.ts"],
      "@angular/common/http": ["node_modules/@angular/common/types/http.d.ts"],
      "@angular/common/http/testing": ["node_modules/@angular/common/types/http-testing.d.ts"],
      "@angular/router/testing": ["node_modules/@angular/router/types/testing.d.ts"],
      "@angular/platform-browser/animations": ["node_modules/@angular/platform-browser/types/animations.d.ts"],
      "@angular/platform-browser/testing": ["node_modules/@angular/platform-browser/types/testing.d.ts"],
      "@angular/cdk/observers": ["node_modules/@angular/cdk/types/observers.d.ts"],
      "@ng-bootstrap/ng-bootstrap": ["node_modules/@ng-bootstrap/ng-bootstrap/types/ng-bootstrap.d.ts"],
      "@ng-bootstrap/ng-bootstrap/*": ["node_modules/@ng-bootstrap/ng-bootstrap/types/*"]
    }
  },
  "include": ["src/**/*.spec.ts", "src/**/*.d.ts"]
}
